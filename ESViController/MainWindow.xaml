<Window x:Class="ESViController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESViController"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="494">
    <Grid>
        <Button x:Name="buttonStart" Content="Start" HorizontalAlignment="Left" Margin="304,10,0,0" VerticalAlignment="Top" Height="68" Width="180" Click="buttonStart_Click" FontSize="30"/>
        <ComboBox x:Name="comboBoxPortList" HorizontalAlignment="Left" Height="24" Margin="10,10,0,0" VerticalAlignment="Top" Width="198">
        </ComboBox>
        <Button x:Name="buttonReset" Content="Reset" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Height="40" Width="87" Click="buttonReset_Click"/>
        <Button x:Name="buttonConnect" Content="Connect" HorizontalAlignment="Left" Margin="121,39,0,0" VerticalAlignment="Top" Height="40" Width="87" Click="buttonConnect_Click"/>
        <TextBox x:Name="textBox" Text="Force display" TextWrapping="Wrap" Margin="10,83,10,10" FontSize="24" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"/>

    </Grid>
</Window>
